package basicjava;

import java.awt.*;
import javax.swing.*;

public class Application {
	public static void main(String[] args) {

		// create new frame
		JFrame f = new JFrame("Calculator");
		// set size of frame
		f.setSize(1000, 1000);
		// setting the close button so that the frame will be closed when it is
		f.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

		//adding the number panel class into the application class
		NumberPanel n = new NumberPanel();
		NumberPanel m = new NumberPanel();
		NumberPanel p = new NumberPanel();



		// adding panel to frame
		f.add(n);
		f.add(m);
		f.add(p);

		//allow the frame to visible; boolean
		f.setVisible(true);

	}
}
